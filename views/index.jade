                  label(for="size") height
                  input(type="text", value!=height, name="height", placeholder="Height").input-lg.form-control
                .form-group
                  each fileName in files
                    img(src!=fileName, alt="")
                .row
                  .form-actions
                    button.btn.btn-lg.btn-primary(type="submit") Submit
